<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LanguageBank.Views.ItemDetailPage" Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Foreign:" FontSize="Medium" FontAttributes="Italic"/>
        <Label Text="{Binding Item.Foreign}" VerticalOptions="FillAndExpand" FontSize="Medium" />
        <Label Text="Native:" FontSize="Medium" FontAttributes="Italic"/>
        <Label Text="{Binding Item.Native}" VerticalOptions="FillAndExpand" FontSize="Medium" />
    </StackLayout>
</ContentPage>